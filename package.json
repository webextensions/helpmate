{
    "name": "helpmate",
    "version": "1.5.12",
    "description": "Helpmate - A collection of various helper functions for Node.js and Browser",
    "type": "module",
    "engines": {
        "node": ">=18"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "scripts": {
        "clean": "rm -rf dist/",
        "lint": "    eslint . --ext .cjs,.js,.mjs,.ts,.tsx --report-unused-disable-directives",
        "lint:fix": "eslint . --ext .cjs,.js,.mjs,.ts,.tsx --report-unused-disable-directives --fix",
        "mocha": "mocha --reporter spec 'test/**/*.mjs' 'src/**/*.test.mjs'",
        "start:build": "      npm run clean && rollup --config",
        "start:build:watch": "npm run clean && rollup --watch --config",
        "start": "npm run start:build:watch",
        "test": "npm run lint && npm run mocha",
        "version": "npm run start:build"
    },
    "files": [
        "dist/",
        "src/",
        "test/",
        ".editorconfig",
        ".eslintrc",
        ".eslintignore",
        ".nvmrc",
        "rollup.config.js"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/webextensions/helpmate.git"
    },
    "keywords": [
        "helpmate",
        "helper",
        "functions"
    ],
    "author": "webextensions.org <webextensions.org@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/webextensions/helpmate/issues"
    },
    "homepage": "https://github.com/webextensions/helpmate",
    "dependencies": {
        "async": "^3.2.4",
        "chalk": "^5.3.0",
        "del": "^7.1.0",
        "extend": "^3.0.2",
        "note-down": "^1.0.2",
        "shelljs": "^0.8.5"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "chai": "^4.3.10",
        "eslint": "^8.51.0",
        "eslint-config-ironplate": "^0.7.1",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unicorn": "^48.0.1",
        "mocha": "^10.2.0",
        "rollup": "^4.1.4"
    }
}
