{
    "name": "helpmate",
    "version": "1.5.6",
    "description": "Helpmate - A collection of various helper functions for Node.js and Browser",
    "type": "module",
    "engines": {
        "node": ">=14"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "scripts": {
        "lint": "eslint . --ext .js,.mjs --report-unused-disable-directives",
        "lint-fix": "eslint . --ext .js,.mjs --report-unused-disable-directives --fix",
        "mocha": "mocha --reporter spec 'test/**/*.mjs'",
        "start": "npm run start:build",
        "start:build": "rm -rf dist/; rollup --config",
        "start:build:watch": "rm -rf dist/; rollup --watch --config",
        "test": "npm run lint && npm run mocha"
    },
    "files": [
        "dist/",
        "src/",
        "test/",
        ".editorconfig",
        ".eslintrc",
        ".eslintignore",
        ".nvmrc",
        "rollup.config.js"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/webextensions/helpmate.git"
    },
    "keywords": [
        "helpmate",
        "helper",
        "functions"
    ],
    "author": "webextensions.org <webextensions.org@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/webextensions/helpmate/issues"
    },
    "homepage": "https://github.com/webextensions/helpmate",
    "dependencies": {
        "async": "^3.2.4",
        "chalk": "^5.3.0",
        "del": "^7.0.0",
        "note-down": "^1.0.2",
        "shelljs": "^0.8.5"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.3",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/plugin-terser": "^0.4.3",
        "chai": "^4.3.7",
        "eslint": "^8.46.0",
        "eslint-config-ironplate": "^0.7.1",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-react": "^7.33.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unicorn": "^48.0.1",
        "mocha": "^10.2.0",
        "rollup": "^3.28.0"
    }
}
